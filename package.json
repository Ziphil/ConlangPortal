{
  "name": "conlang-portal",
  "version": "1.5.0",
  "author": "Ziphil",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "develop": "run-p develop:client develop:server develop:nodemon",
    "develop:client": "webpack serve --mode development --devtool inline-source-map --config webpack-client.ts --hot",
    "develop:server": "webpack --mode development --config webpack-server.ts --watch",
    "develop:nodemon": "nodemon --inspect -L dist/index.js",
    "build": "run-s build:client build:server",
    "build:client": "webpack --mode production --config webpack-client.ts",
    "build:server": "webpack --mode production --config webpack-server.ts",
    "start": "node dist/index.js",
    "postinstall": "npm run build"
  },
  "eslintConfig": {
    "extends": "ziphil",
    "ignorePatterns": "webpack-*.ts",
    "rules": {
      "@typescript-eslint/quotes": "off"
    }
  },
  "nodemonConfig": {
    "watch": [
      "dist"
    ],
    "ext": "js",
    "ignore": [
      "dist/static/**",
      "dist/client/**"
    ]
  },
  "dependencies": {
    "@typegoose/typegoose": "^8.1.1",
    "@types/react-css-modules": "^4.6.4",
    "axios": "^0.21.1",
    "bcrypt": "^5.0.1",
    "cookie-parser": "^1.4.5",
    "css-tree": "^1.1.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-session": "^1.17.2",
    "jsonify-type": "^1.0.0",
    "jsonwebtoken": "^8.5.1",
    "mobx": "^6.3.2",
    "mobx-react": "^7.2.0",
    "mongoose": "^5.13.7",
    "multer": "^1.4.3",
    "node-html-to-image": "^3.2.0",
    "react": "^17.0.2",
    "react-css-modules": "^4.7.11",
    "react-dom": "^17.0.2",
    "react-intl": "^5.20.9",
    "react-router-dom": "^5.2.0",
    "ts-essentials": "^8.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/css-tree": "^1.0.6",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/html-webpack-plugin": "^3.2.6",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/loader-utils": "^2.0.3",
    "@types/mongoose": "^5.11.97",
    "@types/multer": "^1.4.7",
    "@types/puppeteer": "^5.4.4",
    "@types/react": "^17.0.19",
    "@types/react-dom": "^17.0.9",
    "@types/react-router-dom": "^5.1.8",
    "@types/webpack-node-externals": "^2.5.2",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "@webpack-cli/serve": "^1.5.2",
    "babel-loader": "^8.2.2",
    "babel-polyfill": "^6.26.0",
    "css-loader": "^6.2.0",
    "eslint": "^7.32.0",
    "eslint-config-ziphil": "^1.2.0",
    "eslint-plugin-import": "^2.24.1",
    "eslint-plugin-jsdoc": "^36.0.7",
    "html-webpack-plugin": "^5.3.2",
    "json-loader": "^0.5.7",
    "nodemon": "^2.0.6",
    "npm-run-all": "^4.1.5",
    "raw-loader": "^4.0.2",
    "reflect-metadata": "^0.1.13",
    "sass": "^1.38.0",
    "sass-loader": "^12.1.0",
    "source-map-loader": "^3.0.0",
    "style-loader": "^3.2.1",
    "ts-loader": "^9.2.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.3.5",
    "webpack": "^5.51.1",
    "webpack-cli": "^4.8.0",
    "webpack-dev-server": "^4.0.0",
    "webpack-node-externals": "^3.0.0",
    "yaml-flat-loader": "^1.0.2"
  }
}
